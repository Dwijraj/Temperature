<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/bg_colour"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="temperature.com.temperature.Main2Activity"
    tools:showIn="@layout/activity_main2">

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginTop="160dp"
            android:id="@+id/linearLayout"
            android:orientation="vertical">


            <TextView
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:gravity="start"
                android:textSize="20sp"
                android:layout_height="40dp"
                android:text="DESCRIPTION :"
                android:id="@+id/id1" />

            <TextView
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:gravity="start"
                android:textSize="20sp"
                android:id="@+id/id2"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="TEMPERATURE : MIN   " />

            <TextView
                android:layout_marginTop="40dp"
                android:textColor="#ffff"
                android:gravity="start"
                android:textSize="20sp"
                android:id="@+id/id3"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:text="TEMPERATURE : MAX   "/>

            <TextView
                android:layout_marginTop="40dp"
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:gravity="start"
                android:textSize="20sp"
                android:id="@+id/id4"
                android:layout_height="wrap_content"
                android:text="HUMIDITY          :" />

            <TextView
                android:layout_marginTop="40dp"
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:gravity="start"
                android:textSize="18sp"
                android:id="@+id/id5"
                android:layout_height="wrap_content"
                android:text="LAST UPDATED    :" />

            <TextView
                android:layout_marginTop="40dp"
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:gravity="start"
                android:textSize="20sp"
                android:id="@+id/id6"
                android:layout_height="wrap_content"
                android:text="LOCATION          :" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/linearLayout"
            android:id="@+id/linearLayout2"
            android:orientation="vertical"
            android:weightSum="1">


            <TextView
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:gravity="start"
                android:text="NO INTERNET CONNECTION"
                android:id="@+id/descp" />

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#ffff"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="NO INTERNET CONNECTION"
                android:id="@+id/tempmin"/>

            <TextView
                android:gravity="start"
                android:layout_marginTop="60dp"
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="NO INTERNET CONNECTION"
                android:id="@+id/tempmax" />

            <TextView
                android:gravity="start"
                android:layout_marginTop="60dp"
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="NO INTERNET CONNECTION"
                android:id="@+id/volume" />

            <TextView
                android:gravity="start"
                android:layout_marginTop="40dp"
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="NO INTERNET CONNECTION"
                android:id="@+id/lastupdated" />

            <TextView
                android:gravity="start"
                android:layout_marginTop="10dp"
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="NO INTERNET CONNECTION"
                android:id="@+id/location" />


        </LinearLayout>

        <TextView
            android:textColor="#ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEMPERATURE"
            android:id="@+id/textview"
            android:layout_marginTop="62dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout" />
        <ImageView
            android:textColor="#ffff"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView"
            android:layout_alignTop="@+id/textview"
            android:layout_toLeftOf="@+id/linearLayout2"
            android:layout_toStartOf="@+id/linearLayout2" />

        <TextView
            android:textColor="#ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO"
            android:textSize="22sp"
            android:id="@+id/temp"
            android:layout_below="@+id/textview"
            android:layout_toLeftOf="@+id/textView7"
            android:layout_toStartOf="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:text="ÂºC    "
            android:textSize="22sp"
            android:textColor="#ffff"
            android:layout_below="@+id/textview"
            android:layout_toLeftOf="@+id/button2"
            android:layout_toStartOf="@+id/button2" />

        <EditText
            android:id="@+id/editText2"
            android:minEms="10"
            android:gravity="center"
            android:textColor="#ffff"
            android:hint="City,Country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#ffff"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/button2"
            android:layout_toStartOf="@+id/button2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GetInfo"
            android:textSize="8sp"
            android:textStyle="bold"
            android:id="@+id/button2"
            android:layout_alignTop="@+id/editText2"
            android:layout_alignRight="@+id/linearLayout2"
            android:layout_alignEnd="@+id/linearLayout2" />



    </RelativeLayout>




</ScrollView>


</RelativeLayout>
